<% provide :title, t(".post") %>
<div class="post-manager">
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= t ".id" %></th>
      <th><%= t ".author" %></th>
      <th><%= t ".title" %></th>
      <th><%= t ".view_count" %></th>
      <th><%= t ".post_time" %></th>
      <th colspan="2"><%= t ".action" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= link_to post.user.name, post.user %></td>
          <td><%= post.title %></td>
          <td><%= post.view_count %></td>
          <td><%= l post.created_at, format: :post_time %></td>
          <td><%= link_to t(".view_post"), post %></td>
          <td><%= link_to t(".delete"), post, method: :delete,
            data: {confirm: t(".sure")} %></td>
        </tr>
      <% end %>
      <%= paginate @posts, theme: "twitter-bootstrap-3" %>
    <% end %>
  </tbody>
</table>
</div>
