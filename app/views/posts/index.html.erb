<%= provide :title, t(".posts") %>
<div class="posts-list">
  <div class="row">
    <div class="col-md-9">
      <h3><%= t ".all_post_by", user: @user.name, count: @user.posts.size %></h3>
      <ul>
        <%= render @posts %>
      </ul>
      <%= paginate @posts, theme: "twitter-bootstrap-3" %>
    </div>
    <div class="col-md-3">
      <%= render @user %>
    </div>
  </div>
</div>
