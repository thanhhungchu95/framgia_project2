<%= provide :title, t(".posts") %>
<div class="posts-list">
  <div class="row">
    <% if @user %>
      <div class="col-md-9">
        <h3><%= t ".all_post_by", user: @user.name, count: @user.posts.size %></h3>
        <ul>
          <%= render @posts %>
        </ul>
        <%= paginate @posts, theme: "twitter-bootstrap-3" %>
      </div>
      <div class="col-md-3">
        <%= render @user %>
      </div>
    <% else %>
      <h3><%= t ".search_result", keyword: params[:q] %></h3>
      <ul>
        <%= render @posts %>
      </ul>
      <%= paginate @posts, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
