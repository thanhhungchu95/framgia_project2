<% provide :title, @post.title %>
<div class="row">
  <div class="single-post col-md-9">
    <div class="post-content">
      <h3><%= @post.title %></h3>
      <ul class="tag-list">
        <%= render @post.tags %>
      </ul>
      <div class="action-link">
        <% if can? :edit, @post %>
          <%= link_to edit_post_path @post do %>
            <small class="glyphicon glyphicon-edit"></small>
            <%= t ".edit" %>
          <% end %>
        <% end %>
        <% if can? :delete, @post %>
          <%= link_to @post, method: :delete, data: {confirm: t(".sure")} do %>
            <i class="glyphicon glyphicon-remove"></i>
            <%= t ".delete" %>
          <% end %>
        <% end %>
      </div>
      <%= image_tag @post.picture, class: "single-post-picture" if @post.picture %>
      <p><%= @post.content %></p>
    </div>
    <ul class="post-link">
      <%= render "posts/post_link", post: @post %>
    </ul>
    <%= render "shared/comment_list", post: @post %>
  </div>
  <div class="sidebar-post col-md-3">
    <div class="post-author">
      <%= image_tag @post.user.avatar, alt: "", class: "author-avatar" %>
      <%= link_to @post.user.name, @post.user, class: "user-link" %>
    </div>
    <div class="post-share">
      <%= image_tag "", alt: t(".fb"), class: "avatar-img-small" %>
      <%= image_tag "", alt: t(".tt"), class: "avatar-img-small" %>
      <%= image_tag "", alt: t(".gg"), class: "avatar-img-small" %>
    </div>
  </div>
</div>
