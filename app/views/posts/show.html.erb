<% provide :title, @post.title %>
<div class="row">
  <div class="single-post col-md-9">
    <div class="post-content">
      <h3><%= @post.title %></h3>
      <ul class="tag-list">
        <%= render @post.tags %>
      </ul>
      <ul class="post-link">
        <li>
          <small class="glyphicon glyphicon-calendar"></small>
          <%= content_tag :span, data: {toggle: "tooltip", placement: "bottom"},
            title: t(".post_time") do %>
            <%= l @post.updated_at, format: :post_time %>
          <% end %>
        </li>
        <li>
          <small class="glyphicon glyphicon-user"></small>
          <%= content_tag :span, data: {toggle: "tooltip", placement: "bottom"},
            title: t("authors") do %>
            <%= link_to @post.user.name, @post.user %>
          <% end %>
        </li>
        <li>
          <small class="glyphicon glyphicon-comment"></small>
          <%= content_tag :span, data: {toggle: "tooltip", placement: "bottom"},
            title: t(".comments"), class: "badge" do %>
            <%= @post.comments.size %>
          <% end %>
        </li>
        <li>
          <small class="glyphicon glyphicon-eye-open"></small>
          <%= content_tag :span, data: {toggle: "tooltip", placement: "bottom"},
            title: t(".views"), class: "badge" do %>
            <%= @post.view_count %>
          <% end %>
        </li>
      </ul>
      <%= image_tag @post.picture, class: "single-post-picture" if @post.picture %>
      <p><%= @post.content %></p>
    </div>
    <div class="post-comments">
      <h3><%= t ".comments" %></h3>
    </div>
  </div>
  <div class="sidebar-post col-md-3">
    <div class="post-author">
      <%= image_tag @post.user.avatar, alt: "", class: "author-avatar" %>
      <%= link_to @post.user.name, @post.user, class: "user-link" %>
    </div>
    <div class="post-share">
      <%= image_tag Settings.no_avatar, alt: t(".fb"), class: "avatar-img-small" %>
      <%= image_tag Settings.no_avatar, alt: t(".tt"), class: "avatar-img-small" %>
      <%= image_tag Settings.no_avatar, alt: t(".gg"), class: "avatar-img-small" %>
    </div>
  </div>
</div>
